{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"runArgs": [],
	"mounts": [
		"type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix",
		"type=bind,source=${localEnv:HOME}/.ssh,target=/root/.ssh,consistency=cached"
	],
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow"
			]
		}
	},
	"postCreateCommand": "chmod 700 ~/.ssh && chmod 600 ~/.ssh/id_github && chmod 644 ~/.ssh/id_github.pub && git config --global user.name 'Your Name' && git config --global user.email 'you@example.com'"
}
